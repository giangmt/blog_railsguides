<%= form_with model: @article, local: true do |f| %>
  <%= render "shared/errors" %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <%= link_to "Back", articles_path %>
<% end %>
